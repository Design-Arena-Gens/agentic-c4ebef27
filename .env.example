# YouTube API
YOUTUBE_API_KEY=your_youtube_api_key
YOUTUBE_CLIENT_ID=your_client_id
YOUTUBE_CLIENT_SECRET=your_client_secret
YOUTUBE_REDIRECT_URI=http://localhost:3000/api/auth/callback

# Open-Source LLM API (e.g., local Ollama or OpenRouter)
LLM_API_URL=http://localhost:11434/api/generate
LLM_MODEL=llama3.2

# Stable Diffusion API (e.g., local ComfyUI or Replicate)
SD_API_URL=http://localhost:7860
SD_MODEL=stabilityai/stable-diffusion-xl-base-1.0

# TTS API (e.g., local XTTS or Coqui)
TTS_API_URL=http://localhost:5002

# Database
DATABASE_PATH=./data/microdrama.db

# Automation
AUTO_GENERATE=false
GENERATION_INTERVAL=3600000
MAX_VIDEOS_PER_DAY=5

# Analytics
ENABLE_ANALYTICS=true
